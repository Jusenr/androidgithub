<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.jusenr.androidlibrary.widgets.fresco.FrescoImageView
        android:id="@+id/fiv_orgs_icon"
        style="@style/image_round_4dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        app:actualImageResource="@string/current_app_name"/>

    <TextView
        android:id="@+id/tv_orgs_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        tools:text="@string/current_app_name"/>

</LinearLayout>