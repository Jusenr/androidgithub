<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/logo_splash</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--图片加载主样式-->
    <style name="image_style">
        <!--加载图片比例类型-->
        <item name="actualImageScaleType">focusCrop</item>
        <!--占位图-->
        <item name="placeholderImage">@mipmap/img_image_default_l</item>
        <!--占位图比例类型-->
        <item name="placeholderImageScaleType">fitCenter</item>
        <!--加载失败图-->
        <item name="failureImage">@mipmap/img_image_default_l</item>
        <!--加载失败图比例类型-->
        <item name="failureImageScaleType">centerInside</item>
        <!--加载重试图比例类型-->
        <item name="retryImageScaleType">centerCrop</item>
        <!--加载时缓冲图比例类型-->
        <item name="progressBarImageScaleType">centerInside</item>
        <!--占位图比例类型-->
        <item name="progressBarAutoRotateInterval">1000</item>
    </style>

    <!--4dp的圆角图片加载样式-->
    <style name="image_round_4dp" parent="image_style">
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">4dp</item>
    </style>

    <!--10dp的圆角图片加载样式-->
    <style name="image_round_10dp" parent="image_style">
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">10dp</item>
    </style>

    <!--圆形图片加载样式-->
    <style name="image_circle" parent="image_style">
        <item name="roundAsCircle">true</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/colorPrimary</item>

        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/md_white_1000</item>

        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/md_grey_300</item>

        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>


</resources>
